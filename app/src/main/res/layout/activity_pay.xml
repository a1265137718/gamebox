<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.gamebox_idtkown.views.widgets.GBActionBar5
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"></com.gamebox_idtkown.views.widgets.GBActionBar5>

    <RelativeLayout
        android:id="@+id/pay_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/actionbar"
        android:layout_marginLeft="@dimen/spacing_big"
        android:layout_marginTop="@dimen/spacing_big"
        >

        <RelativeLayout
            android:id="@+id/section"
            android:layout_width="match_parent"
            android:layout_height="25dp"

            >

            <TextView
                android:id="@+id/tvzh"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="充值帐号："
                android:textColor="@color/black"
                android:textSize="@dimen/font_snormal"/>

            <TextView
                android:id="@+id/tvusername"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tvzh"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#ff6600"
                android:textSize="@dimen/font_snormal"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/section2"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_below="@+id/section"
            android:visibility="invisible"
            >

            <TextView
                android:id="@+id/tvq"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="支付金额："
                android:textColor="@color/black"
                android:textSize="@dimen/font_snormal"/>

            <TextView
                android:id="@+id/tvmoney"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tvq"
                android:gravity="center_vertical"
                android:text="¥10"
                android:textColor="#ff6600"
                android:textSize="@dimen/font_snormal"/>

        </RelativeLayout>

        <GridView
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:numColumns="3"
            android:layout_below="@+id/section2"
            >

        </GridView>

        <EditText
            android:id="@+id/et_money"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="@dimen/spacing_normal"
            android:layout_marginRight="@dimen/spacing_normal"
            android:layout_centerVertical="true"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center_vertical"
            android:hint="输入金额"
            android:inputType="numberDecimal"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/font_snormal"
            android:layout_below="@+id/gridview"
            android:layout_marginTop="10dp"
            android:background="#00000000"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/section4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/pay_info"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/spacing_big"
                android:gravity="center_vertical"
                android:text="请选择支付方式："
                android:textColor="@color/black"
                android:textSize="@dimen/font_snormal"/>

            <ListView
                android:id="@+id/listView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_title"
                android:divider="@null"
                >
            </ListView>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>