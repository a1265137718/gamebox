<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:gb="http://schemas.android.com/apk/res-auto"
    >

    <com.gamebox_idtkown.views.widgets.GBVGameListView
        android:id="@+id/hot_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        gb:src="@mipmap/rank_game"
        gb:text="@string/index_banner_hot_game"></com.gamebox_idtkown.views.widgets.GBVGameListView>

    <com.gamebox_idtkown.views.widgets.GBTitleView
        android:id="@+id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/hot_game"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        gb:src="@mipmap/rank_game2"
        gb:text="@string/game_rank"
        ></com.gamebox_idtkown.views.widgets.GBTitleView>
</RelativeLayout>