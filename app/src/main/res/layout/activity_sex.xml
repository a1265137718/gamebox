<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.gamebox_idtkown.views.widgets.GBActionBar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"></com.gamebox_idtkown.views.widgets.GBActionBar>

    <com.gamebox_idtkown.views.widgets.GBScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/actionbar"
        android:background="@color/white"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fl_banner">

                <RelativeLayout
                    android:id="@+id/sex"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/menu_item_hieght"
                    android:layout_below="@+id/rl_phone"
                    android:background="@drawable/btn_bg_selector"
                    android:clickable="true"
                    >

                    <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/spacing_big"
                        android:gravity="center_vertical"
                        android:text="男"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_big"
                        />

                    <TextView
                        android:id="@+id/tv_select"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/spacing_big"
                        android:layout_marginRight="@dimen/spacing_big"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="√"
                        android:textSize="@dimen/font_big"
                        android:visibility="gone"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_hieght"
                        android:layout_alignParentBottom="true"
                        android:background="@color/gray"></View>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/sex2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/menu_item_hieght"
                    android:layout_below="@+id/sex"
                    android:background="@drawable/btn_bg_selector"
                    android:clickable="true"
                    >

                    <TextView
                        android:id="@+id/tv_sex2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/spacing_big"
                        android:gravity="center_vertical"
                        android:text="女"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_big"
                        />

                    <TextView
                        android:id="@+id/tv_select2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/spacing_big"
                        android:layout_marginRight="@dimen/spacing_big"
                        android:gravity="center_vertical"
                        android:text="√"
                        android:textSize="@dimen/font_big"
                        android:visibility="gone"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_hieght"
                        android:layout_alignParentBottom="true"
                        android:background="@color/gray"></View>
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>
    </com.gamebox_idtkown.views.widgets.GBScrollView>

</RelativeLayout>