<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item android:left="2dip" android:top="2.0dip">
                <shape>
                    <solid
                        android:color="@color/blue"/>
                    <corners android:radius="5dp"/>
                    <padding
                        android:bottom="4dp"
                        android:left="15dp"
                        android:right="15dp"
                        android:top="4dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item
        android:state_pressed="true">
        <layer-list>
            <item android:left="2dip" android:top="2.0dip">
                <shape>
                    <solid
                        android:color="@color/blue"/>
                    <corners android:radius="5dp"/>
                    <padding
                        android:bottom="4dp"
                        android:left="15dp"
                        android:right="15dp"
                        android:top="4dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:left="2dip" android:top="2.0dip">
                <shape>
                    <stroke
                        android:width="1dp"
                        android:color="@color/blue"/>
                    <corners android:radius="5dp"/>
                    <padding
                        android:bottom="4dp"
                        android:left="15dp"
                        android:right="15dp"
                        android:top="4dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector> 